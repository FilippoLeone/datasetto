# Environment variables for production deployment
# Copy this to .env.production and update with your actual domain

# Backend WebSocket/API server
VITE_SERVER_URL=https://your-domain.com

# HLS streaming endpoint (where NGINX serves HLS manifests)
VITE_HLS_BASE_URL=https://your-domain.com/hls

# API endpoint (usually same as server)
VITE_API_BASE_URL=https://your-domain.com

# RTMP server URL (shown to users in OBS setup)
# Use your domain or public IP
VITE_RTMP_SERVER_URL=rtmp://your-domain.com:1935/live

# Screenshare capture tuning
VITE_SCREENSHARE_IDEAL_WIDTH=1920
VITE_SCREENSHARE_IDEAL_HEIGHT=1080
VITE_SCREENSHARE_IDEAL_FPS=30
VITE_SCREENSHARE_MAX_FPS=60
# Uncomment and set (in Kbps) to enforce an outgoing bitrate cap
# VITE_SCREENSHARE_MAX_BITRATE_KBPS=4000
