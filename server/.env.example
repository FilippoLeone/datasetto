# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Security & Sessions
PASSWORD_MIN_LENGTH=8
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
MAX_CONNECTIONS_PER_IP=10
ACCOUNT_SESSION_TTL_MS=86400000

# CORS
CORS_ORIGIN=http://localhost:5173

# Channels
MAX_CHANNELS=50
MAX_USERS_PER_CHANNEL=50

# Messages
MAX_MESSAGES_PER_CHANNEL=100
MAX_MESSAGE_LENGTH=1000
MAX_MESSAGES_PER_MINUTE=30

# Storage
MESSAGE_STORE_DRIVER=memory
# MESSAGE_STORE_PATH=./storage/messages.json
MESSAGE_STORE_FLUSH_DEBOUNCE_MS=500
ACCOUNT_STORE_PATH=./storage/accounts.json

# Streaming
HLS_PATH=/tmp/hls
HLS_BASE_URL=http://localhost/hls
MAX_STREAM_DURATION=14400

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_CONSOLE=true
LOG_FILE=false
LOG_FILE_PATH=./logs

# Socket.IO
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000
SOCKET_MAX_BUFFER_SIZE=1000000

# Voice/WebRTC
MAX_VOICE_PEERS=20
AUDIO_QUALITY=high
